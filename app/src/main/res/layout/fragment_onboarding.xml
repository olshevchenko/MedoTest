<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/onboarding13_top_fullmargin"
        android:src="@drawable/onboarding1"/>

    <TextView
        android:id="@+id/tvOnBoardingInfo"
        android:layout_below="@id/ivOnBoarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/onboardinginfo_top_margin"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        style="@style/OnBoardingTextStyle"
        android:text="@string/section_message_1"/>
</RelativeLayout>
